{
    "name": "VBus",
    "version": "6",
    "slug": "vbus",
    "description": "Addon for collecting and displaying data from Resol VBus devices.",
    "arch": [
        "armhf",
        "aarch64",
        "amd64"
    ],
    "auto_uart": true,
    "privileged": ["SYS_MODULE", "SYS_RAWIO"],
    "ingress": true,
    "panel_icon": "mdi:chart-bell-curve",
    "startup": "system",
    "boot": "auto",
    "options": {
        "device": null,
        "interval": 60,
        "mqtt": {
            "base_topic": "heating",
            "server": "mqtt://mqtt-server",
            "user": "user",
            "password": "password"
          }
    },
    "schema": {
        "device": "str",
        "interval": "int(1,)",
        "mqtt": {
            "base_topic": "str",
            "server": "str",
            "user": "str?",
            "password": "str?"
          }
    }
}
