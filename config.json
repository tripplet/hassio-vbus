{
    "name": "VBus",
    "version": "9",
    "slug": "vbus",
    "description": "Addon for collecting and displaying data from Resol VBus devices.",
    "arch": [
        "armhf",
        "aarch64",
        "amd64"
    ],
    "auto_uart": true,
    "privileged": ["SYS_MODULE", "SYS_RAWIO"],
    "ingress": true,
    "panel_icon": "mdi:chart-bell-curve",
    "startup": "system",
    "boot": "auto",
    "options": {
        "device": null,
	"database": null,
        "interval": 60,
        "print_stdout": false,
        "verbose": false,
        "mqtt": {
            "enabled": false,
            "base_topic": "heating",
            "server": "tcp://mqtt-server",
            "client_id": "vbus",
            "user": null,
            "password": null
          }
    },
    "schema": {
        "device": "str",
	"database": "str",
        "interval": "int(1,)",
        "print_stdout":"bool",
        "verbose": "bool",
        "mqtt": {
            "enabled": "bool",
            "base_topic": "str",
            "server": "str",
            "client_id": "str",
            "user": "str?",
            "password": "str?"
          }
    }
}
